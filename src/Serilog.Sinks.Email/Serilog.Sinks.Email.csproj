<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>The email sink for Serilog</Description>
    <VersionPrefix>2.4.1</VersionPrefix>
    <Authors>Serilog Contributors</Authors>
    <Copyright>Copyright Â© Serilog Contributors 2021</Copyright>
    <TargetFrameworks>net45;net47;netstandard1.3;netstandard2.0;netstandard2.1</TargetFrameworks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <RootNamespace>Serilog</RootNamespace>
    <AssemblyOriginatorKeyFile>../../assets/Serilog.snk</AssemblyOriginatorKeyFile>
    <SignAssembly>true</SignAssembly>
    <PublicSign Condition=" '$(OS)' != 'Windows_NT' ">true</PublicSign>
    <PackageTags>serilog;file;io</PackageTags>
    <PackageIcon>serilog-sink-nuget.png</PackageIcon>
    <PackageProjectUrl>http://serilog.net</PackageProjectUrl>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/serilog/serilog-sinks-email</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Serilog.Sinks.Email.Tests, " />
    <InternalsVisibleTo Include="DynamicProxyGenAssembly2, " />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Serilog" Version="2.9.0" />
    <PackageReference Include="Serilog.Sinks.PeriodicBatching" Version="2.3.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Sinks\Email\MailKitEmailTransport.cs" />
    <Compile Remove="Sinks\Email\SystemMailEmailTransport.cs" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFrameworkIdentifier)' == '.NETFramework' ">
    <Compile Include="Sinks\Email\SystemMailEmailTransport.cs" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFrameworkIdentifier)' == '.NETStandard' ">
    <Compile Include="Sinks\Email\MailKitEmailTransport.cs" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFrameworkIdentifier) == '.NETStandard' ">
    <PackageReference Include="MailKit" Version="2.6.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\serilog-sink-nuget.png">
      <Pack>True</Pack>
      <PackagePath />
    </None>
  </ItemGroup>

</Project>
